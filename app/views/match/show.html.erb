 <%= javascript_include_tag :defaults %>
 <%= csrf_meta_tag %>

 <script type="text/javascript">

 function BUDEffect(element){
     new Effect.toggle(element,'Blind', {duration:0.5});
 }
 </script>

    <div id="sidebar">
        <div onclick="BUDEffect($(homeplays))">
            <li><%= @home_team_name %></li>
        </div>
       <p></p>
        <div onclick="BUDEffect($(awayplays))">
            <li><%= @away_team_name %></li>
        </div>
         <div id="homeplays" style="font-size:11px; display:none">
                <table>
                <%= render "playhead"%>
                <tbody>
                <% for p in @home_plays %>
                    <%= render p%>
                <% end %>
                </tbody>
                </table>
        </div>
        <div id="awayplays" style="font-size:11px; display:none">
                <table>
                <%= render "playhead"%>
                <tbody>
                <% for p in @away_plays %>
                    <%= render p%>
                <% end %>
                </tbody>
                </table>
        </div>

    </div>
    <div id="performanceGraphs">
        <%= render "dual_graph"%>
        <div class"clear"></div>
    </div>

