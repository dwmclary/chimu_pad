<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "MochiKit.js"%>
<%= javascript_include_tag "sortable_tables.js"%>
<%= csrf_meta_tag %>
<center>
<%= will_paginate @players%>
</center>
<table id="sortable_table" class="datagrid">
    <thead>
        <th mochi:format="str">Name</th>
        <th mochi:format="int">Jersey #</th>
        <th mochi:format="str">Position</th>
        <th mochi:format="float">Rating</th>
<tbody>
<% for p in @players %>
    <%= render p %>
<% end %>
</tbody>


