<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>

<script type="text/javascript">

function BUDEffect(element){
    new Effect.toggle(element,'Blind', {duration:0.5});
}
</script>

<div id="sidebar" >
<h2>View</h2>
<div onclick="BUDEffect($(matches))">
    <li>Matches</li>
    <p>Show/Hide</p>
</div>

<div onclick="BUDEffect($(leagueTeams))">
    <li>Teams</li>
    <p>Show/Hide</p>
</div>
<div onclick="BUDEffect($(leaguePlayers))">
    <li>Players</li>
    <p>Show/Hide</p>
</div>

</div>
<% if @league.matches.size > 0 %>
<center>
<div id="matches">
    <table id="leagueMatchTable" class="prettytable">
    <thead>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col">Home Team</th>
        <th scope="col">Home Score</th>
        <th scope="col">Away Score</th>
        <th scope="col">Away Team</th>
    </thead>
    <tbody>
        <%= render(@matches)%>
    </tbody>
    <p><%= will_paginate @matches %></p>
    </table>
    
</div>
</center>

<center>
<div id="leagueTeams" style="display: none;margin-left:400px;padding-top:1px">
    <table>
    <% for c in @team_columns%>
    <tr>
        <%for t in c %>
            <td><p><%= link_to t.name, :controller => "team", :action => "show", :id => t.id%></p></td>
        <%end%>
    </tr>
    <% end %>
    </table>
        <div style="float:center"><b>Top Teams</b></div>
    <%= render "team/bargraph"%>
    
</div>
<div id="leaguePlayers" style="margin-left:600px; padding-top:25px">
    <%= render "playerbars" %>
</div>

</center>
<% end %>