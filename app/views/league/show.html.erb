<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>

<script type="text/javascript">

function BUDEffect(element){
    new Effect.toggle(element,'Blind', {duration:0.5});
}
</script>

<div id="sidebar">
<h2>View</h2>
<div onclick="BUDEffect($(matches))">
    <li>Matches</li>
</div>

<div onclick="BUDEffect($(leagueTeams))">
    <li>Teams</li>
</div>

</div>
<center>
<div id="matches" style="display: none">
    <table id="leagueMatchTable">
    <thead>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Home Score</th>
        <th>Away Score</th>
        <th>Location</th>
        <th>Date</th>
    </thead>
    <tbody>
        <%= render(@league.matches)%>
    </tbody>
    </table>
</div>
</center>

<center>
<div id="leagueTeams" style="display: none">
    <table>
    <% for c in @team_columns%>
    <tr>
        <%for t in c %>
            <td><p><%= link_to t.name, :controller => "team", :action => "show", :id => t.id%></p></td>
        <%end%>
    </tr>
    <% end %>
    </table>
</div>
</center>