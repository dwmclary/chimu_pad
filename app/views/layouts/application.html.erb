<!DOCTYPE html>
<html>
<head>
  <title>ChimuPad</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-1.5.min.js"%>
  <%= javascript_include_tag "arbor.js"%>
  <%= javascript_include_tag "arbor-tween.js"%>
  <%= csrf_meta_tag %>
</head>
<body>
    <div id="wrapper">
    	<div id="header-wrapper">
    		<div id="header">
    			<div id="logo">
    				<h1><span>Chimu</span>Solutions</h1>
    			</div>
    			<div id="menu">
    				<ul>
    					<li class="current_page_item"><%=link_to "Home", root_url%></li>
    					<li><%=link_to "Leagues", :controller => "league", :action => "show", :id => 1%></li>
    					<li><%= link_to "Teams", :controller => "team", :action => "index" %></li>
    					<li><%=link_to "Players", :controller => "player", :action => "index"%></li>
    					<li><a href="#">About</a></li>
    				</ul>
    			</div>
    		</div>
    	</div>
    	<!-- end #header -->

<%= yield %>


</body>
</html>
